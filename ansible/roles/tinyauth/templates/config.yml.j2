# TinyAuth Configuration
# Generated by Ansible

# Server settings
host: 127.0.0.1
port: 8080

# Database settings
database:
  path: /var/lib/tinyauth/tinyauth.db

# Session settings
session:
  secret: "{{ tinyauth_session_secret | default(lookup('password', '/dev/null length=32 chars=ascii_letters,digits')) }}"
  timeout: 3600  # 1 hour in seconds

# Security settings
security:
  bcrypt_rounds: 12
  require_https: false  # Set to true when using SSL

# Logging
logging:
  level: INFO
  file: /var/log/tinyauth/tinyauth.log

# CORS settings (if needed for API access)
cors:
  enabled: true
  origins:
    - "*"