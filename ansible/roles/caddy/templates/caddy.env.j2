# Caddy environment variables
# This file is sourced by the systemd service

# Cloudflare API token for DNS challenges
CLOUDFLARE_API_TOKEN={{ cloudflare_api_token }}

# Caddy data directory
CADDY_DATA_DIR={{ caddy_data_dir }}

# Caddy config directory
CADDY_CONFIG_DIR={{ caddy_config_dir }}

# Log level
CADDY_LOG_LEVEL={{ log_level }}

# Additional environment variables can be added here
# For example, if you need to set proxy timeouts:
# CADDY_PROXY_TIMEOUT=30s

# If you need to set custom DNS resolvers:
# CADDY_DNS_RESOLVERS=1.1.1.1:53,8.8.8.8:53
